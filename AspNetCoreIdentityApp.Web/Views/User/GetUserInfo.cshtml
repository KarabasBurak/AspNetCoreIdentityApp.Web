@model AppUserDto
@{
    ViewData["Title"] = "GetUserInfo";
}



<h1>Welcome @User.Identity!.Name</h1>

<div class="row">

    <div class="col-md-6 offset-md-3 text-center">

        <user-picture class="rounded" style="width:300px" picture-url="@Model.PictureUrl"></user-picture>

    </div>
</div>


<div class="row " >
    <div class="col-md-6 offset-md-3">
        <h1>User Information</h1>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>UserName</th>
                    <th>Email</th>
                    <th>PhoneNumber</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td>@Model.UserName</td>
                    <td>@Model.Email</td>
                    <td>@Model.PhoneNumber</td>
                </tr>
            </tbody>

        </table>
    </div>
    
</div>
