@model List<RoleListDto>
@{
    ViewData["Title"] = "Index";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-info" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<div class="row">
    <div class="col-md-6 offset-md-2">
        <h2>Roles</h2>
    </div>
    <div class="col-md-2">
        <a class="btn btn-primary" asp-controller="Roles" asp-action="RoleCreate" asp-area="admin"> Create Role</a>
    </div>
</div>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Role Name</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <a class="btn btn-warning btn-sm" asp-area="admin" asp-controller="roles" asp-action="roleupdate" asp-route-id="@item.Id" > Update Role </a>
                            <a class="btn btn-danger btn-sm my-1" asp-area="admin" asp-controller="roles" asp-action="roledelete" asp-route-id="@item.Id" > Delete Role </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


