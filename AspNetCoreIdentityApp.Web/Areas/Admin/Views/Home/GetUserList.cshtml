@model List<UserDto>

@{
    ViewData["Title"] = "GetUserList";
}

<h1>Member List</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>UserName</th>
            <th>Email</th>
            <th>Roller</th>
            <th>Rol İşlemleri</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>
                    <user-role-names user-id="@item.Id"></user-role-names>
                    
                </td>
                <td>
                    <a class="btn btn-outline-primary" asp-controller="Roles" asp-action="AssignRoleToUser" asp-route-id="@item.Id">Kullanıcıya Rol Ata</a>
                </td>
            </tr>
        }
    </tbody>

</table>